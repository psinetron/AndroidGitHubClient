<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/cardview_horizontal_margin"
              android:paddingTop="@dimen/cardview_vartical_margin"
              android:paddingBottom="@dimen/cardview_vartical_margin"
              android:paddingRight="@dimen/cardview_horizontal_margin">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
    >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/cardview_inner_padding">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=""
                    android:id="@+id/tvRepoName"
                    android:textColor="@color/colorStrongAccent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvRepoDescription"
                    android:paddingTop="@dimen/cardview_text_margin"
                    android:paddingBottom="@dimen/cardview_text_margin"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text=""
                        android:id="@+id/tvRepoInfo"
                        android:textColor="@color/colorLightText"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ivBuilderAva"
                        android:scaleType="fitStart"
                        android:layout_marginStart="@dimen/cardview_text_margin"
                        android:layout_marginLeft="@dimen/cardview_text_margin"
                        android:contentDescription="@string/avatar"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>